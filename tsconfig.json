{
   "compilerOptions": {
      "target": "es2016",
      "outDir": "dist",
      "rootDir": "src",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "typeRoots": ["./types", "./node_modules/@types"],
      "skipLibCheck": true
   },
   "include": ["src", "global.d.ts"],
   "exclude": ["node_modules", "dist"]
}
